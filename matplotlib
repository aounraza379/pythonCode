import matplotlib.pyplot as plt
import numpy as np

x = np.arange(10)
y_line = x * 2 + 5
y_scatter = x**2 + np.random.randn(10) * 10 # Parabola with noise

# 1. Line Plot
plt.figure(figsize=(10, 5))
plt.subplot(1, 2, 1) # Set up the first plot in a 1 row, 2 column grid
plt.plot(x, y_line, color='darkblue', marker='o', linestyle='--')

# 2. Scatter Plot
plt.subplot(1, 2, 2) # Set up the second plot
plt.scatter(x, y_scatter, color='firebrick')

plt.tight_layout() # Adjust subplots to give proper spacing
# plt.show()

fig, ax = plt.subplots(figsize=(8, 5))

# Plot data
ax.plot(x, y_line, label='Linear Trend', color='blue')
ax.scatter(x, y_scatter / 3, label='Sampled Data', color='orange') # Divide scatter data to fit better

ax.set_title('Professional Visualization of Sample Data', fontsize=14)
ax.set_xlabel('Independent Variable (Units)', fontsize=12)
ax.set_ylabel('Dependent Variable (Units)', fontsize=12)

ax.legend(loc='upper left')
ax.grid(axis='y', linestyle='--', alpha=0.7) # horizontal grid lines

# ax.show()

